<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.andrews.cptr252.brodis.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_q"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_q_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".QuizMenuActivity"
            android:theme="@style/QuizTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionDetailsActivity"
            android:theme="@style/QuizTheme"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".QuestionListActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".TakeQuizActivity"
            android:label="@string/app_name"
            android:theme="@style/QuizTheme">
        </activity>
    </application>

</manifest>